{
    "name": "builderbuch",
    "version": "0.0.0",
    "license": "MIT",
    "private": true,
    "dependencies": {},
    "devDependencies": {
        "@babel/preset-typescript": "^7.10.4",
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@commitlint/config-lerna-scopes": "^9.1.2",
        "@commitlint/prompt-cli": "^9.1.2",
        "@types/jest": "^26.0.10",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.9.1",
        "babel-jest": "^26.3.0",
        "eslint": "^7.7.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-jest": "^23.20.0",
        "husky": "^4.2.3",
        "jest": "^26.4.0",
        "lerna": "^3.22.1",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.1",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "build": "yarn lerna run build --parallel",
        "build-watch": "yarn lerna run build-watch --parallel",
        "lint-ts": "eslint --ext ts,tsx -c ./.eslintrc.json",
        "build-precommit": "tsc --module esNext --target esnext --lib esnext,dom --moduleResolution node --allowSyntheticDefaultImports --jsx react --resolveJsonModule --downlevelIteration --strict --noImplicitReturns --noFallthroughCasesInSwitch --noUnusedLocals --noUnusedParameters --skipLibCheck",
        "pretty": "prettier --write",
        "prepublish": "yarn build",
        "commit": "commit",
        "test": "jest"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn lint-ts",
            "yarn pretty"
        ],
        "*.{js,html,json,md}": [
            "yarn pretty"
        ]
    },
    "workspaces": [
        "packages/*"
    ]
}

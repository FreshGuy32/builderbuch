{
    "name": "web-build-scripts",
    "version": "0.0.0",
    "main": "index.js",
    "license": "MIT",
    "bin": {
        "web-build": "./bin/build.js",
        "web-start": "./bin/start.js"
    },
    "peerDependencies": {
        "@types/html-webpack-plugin": "3.2.2",
        "@types/react-dev-utils": "9.0.4",
        "@types/webpack": "4.41.8",
        "@types/webpack-bundle-analyzer": "2.13.3",
        "@types/webpack-dev-server": "3.10.1",
        "babel-loader": "8.1.0",
        "fork-ts-checker-webpack-plugin": "4.1.0",
        "html-webpack-plugin": "4.0.4",
        "react-dev-utils": "10.2.1",
        "webpack": "4.42.1",
        "webpack-bundle-analyzer": "3.6.1",
        "webpack-dev-server": "3.10.3"
    },
    "dependencies": {
        "fs-extra": "^9.0.0",
        "yargs": "^15.3.1"
    },
    "devDependencies": {
        "@types/fs-extra": "^8.1.0",
        "@types/node": "^13.9.2",
        "@types/yargs": "^15.0.4",
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.24.0",
        "concurrently": "^5.1.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "husky": "^4.2.3",
        "install-peers-cli": "^2.2.0",
        "lint-staged": "^10.0.8",
        "prettier": "^2.0.1",
        "rimraf": "^3.0.2",
        "typescript": "^3.8.3"
    },
    "scripts": {
        "build": "tsc --project ./tsconfig.json",
        "lint-ts": "eslint --ext ts,tsx -c ./.eslintrc.prod.json",
        "typecheck-ts": "tsc --module esNext --target esnext --lib esnext,dom --moduleResolution node --allowSyntheticDefaultImports --jsx react --resolveJsonModule --downlevelIteration --strict --noImplicitReturns --noFallthroughCasesInSwitch --noUnusedLocals --noUnusedParameters --skipLibCheck --noEmit",
        "pretty": "prettier --write"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn typecheck-ts",
            "yarn lint-ts"
        ],
        "*.{ts,tsx,html,json}": [
            "yarn pretty"
        ]
    }
}

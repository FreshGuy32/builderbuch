{
    "name": "builderbuch",
    "version": "0.0.0",
    "main": "index.js",
    "license": "MIT",
    "bin": {
        "bb-build": "./bin/build.js",
        "bb-start": "./bin/start.js"
    },
    "dependencies": {
        "@babel/core": "^7.9.6",
        "@types/webpack": "*",
        "babel-loader": "8.1.0",
        "fork-ts-checker-webpack-plugin": "4.1.3",
        "fs-extra": "^9.0.0",
        "html-webpack-plugin": "4.3.0",
        "react-dev-utils": "10.2.1",
        "source-map-loader": "^0.2.4",
        "webpack": "4.43.0",
        "webpack-bundle-analyzer": "3.7.0",
        "webpack-dev-server": "3.10.3",
        "yargs": "^15.3.1"
    },
    "devDependencies": {
        "@types/fs-extra": "^8.1.0",
        "@types/html-webpack-plugin": "3.2.2",
        "@types/node": "^13.9.2",
        "@types/react-dev-utils": "9.0.4",
        "@types/webpack-bundle-analyzer": "2.13.3",
        "@types/webpack-dev-server": "3.10.1",
        "@types/yargs": "^15.0.4",
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.24.0",
        "concurrently": "^5.1.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "husky": "^4.2.3",
        "install-peers-cli": "^2.2.0",
        "lint-staged": "^10.0.8",
        "prettier": "^2.0.1",
        "rimraf": "^3.0.2",
        "typescript": "^3.8.3"
    },
    "scripts": {
        "build": "tsc --project ./tsconfig.json",
        "lint-ts": "eslint --ext ts,tsx -c ./.eslintrc.prod.json",
        "build-precommit": "tsc --module esNext --target esnext --lib esnext,dom --moduleResolution node --allowSyntheticDefaultImports --jsx react --resolveJsonModule --downlevelIteration --strict --noImplicitReturns --noFallthroughCasesInSwitch --noUnusedLocals --noUnusedParameters --skipLibCheck",
        "pretty": "prettier --write",
        "prepublish": "yarn build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/*.{ts,tsx}": [
            "yarn build",
            "yarn lint-ts"
        ],
        "*.{ts,tsx,js,html,json}": [
            "yarn pretty"
        ]
    }
}

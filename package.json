{
    "name": "build-scripts",
    "version": "0.0.0",
    "main": "index.js",
    "license": "MIT",
    "dependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.7",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
        "@babel/plugin-proposal-optional-chaining": "^7.8.3",
        "@babel/preset-typescript": "^7.8.3",
        "babel-loader": "^8.0.6",
        "fork-ts-checker-webpack-plugin": "^4.1.0",
        "webpack": "^4.42.0",
        "webpack-bundle-analyzer": "^3.6.1",
        "webpack-dev-server": "^3.10.3",
        "yargs": "^15.3.1"
    },
    "devDependencies": {
        "@babel/plugin-transform-modules-commonjs": "^7.8.3",
        "@types/node": "^13.9.1",
        "@types/webpack": "^4.41.7",
        "@types/webpack-dev-server": "^3.10.1",
        "@types/webpack-bundle-analyzer": "^2.13.3",
        "@types/yargs": "^15.0.4",
        "@typescript-eslint/eslint-plugin": "^2.23.0",
        "@typescript-eslint/parser": "^2.23.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "prettier": "^1.19.1",
        "typescript": "^3.8.3"
    },
    "scripts": {
        "build": "babel src --extensions .ts,.tsx --out-dir dist --delete-dir-on-start",
        "lint-ts": "eslint --ext ts,tsx -c ./.eslintrc.prod.json",
        "typecheck-ts": "tsc --module esNext --target esnext --lib esnext,dom --moduleResolution node --allowSyntheticDefaultImports --jsx react --resolveJsonModule --downlevelIteration --strict --noImplicitReturns --noFallthroughCasesInSwitch --noUnusedLocals --noUnusedParameters --skipLibCheck --noEmit",
        "pretty": "prettier --write"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn typecheck-ts",
            "yarn lint-ts"
        ],
        "*.{ts,tsx,html,json}": [
            "yarn pretty"
        ]
    }
}

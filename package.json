{
    "name": "builderbuch",
    "version": "0.0.0",
    "license": "MIT",
    "private": true,
    "dependencies": {},
    "devDependencies": {
        "@babel/core": "7.13.1",
        "@commitlint/cli": "12.0.0",
        "@commitlint/config-conventional": "12.0.0",
        "@commitlint/config-lerna-scopes": "12.0.0",
        "@commitlint/prompt-cli": "12.0.0",
        "@types/jest": "26.0.20",
        "@typescript-eslint/eslint-plugin": "4.15.2",
        "@typescript-eslint/parser": "4.15.2",
        "babel-jest": "26.6.3",
        "eslint": "7.20.0",
        "eslint-config-prettier": "8.0.0",
        "eslint-plugin-jest": "24.1.5",
        "husky": "5.1.1",
        "jest": "26.6.3",
        "lerna": "3.22.1",
        "lint-staged": "10.5.4",
        "pinst": "^2.1.6",
        "prettier": "2.2.1",
        "rimraf": "3.0.2",
        "typescript": "4.1.5"
    },
    "scripts": {
        "build": "yarn lerna run build --parallel",
        "build-watch": "yarn lerna run build-watch --parallel",
        "lint-ts": "eslint --ext ts,tsx -c ./.eslintrc.json",
        "build-precommit": "tsc --module esNext --target esnext --lib esnext,dom --moduleResolution node --allowSyntheticDefaultImports --jsx react --resolveJsonModule --downlevelIteration --strict --noImplicitReturns --noFallthroughCasesInSwitch --noUnusedLocals --noUnusedParameters --skipLibCheck",
        "pretty": "prettier --write",
        "prepublish": "yarn build",
        "commit": "commit",
        "test": "jest",
        "postinstall": "husky install",
        "prepublishOnly": "pinst --disable",
        "postpublish": "pinst --enable"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn lint-ts",
            "yarn pretty"
        ],
        "*.{js,html,json,md}": [
            "yarn pretty"
        ]
    },
    "workspaces": [
        "packages/*"
    ]
}
